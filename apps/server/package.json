{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "dev:debug": "bun run --hot --inspect src/index.ts",
    "start": "bun run dist/index.js",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "check": "biome check --write"
  },
  "dependencies": {
    "@orpc/openapi": "^1.8.6",
    "@orpc/server": "^1.8.6",
    "@workspace/contracts": "workspace:*",
    "axios": "^1.11.0",
    "bullmq": "^5.58.4",
    "dotenv": "^17.2.2",
    "hono": "^4.8.2",
    "ioredis": "^5.7.0",
    "link-preview-js": "^3.1.0",
    "mongoose": "^8.14.0",
    "p-limit": "^7.1.1",
    "progress": "^2.0.3",
    "sharp": "^0.34.3",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "@types/progress": "^2.0.7",
    "tsdown": "^0.14.2",
    "typescript": "^5.9.2"
  }
}
